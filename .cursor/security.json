{
  "authentication": {
    "password_policy": {
      "min_length": 12,
      "require_uppercase": true,
      "require_lowercase": true,
      "require_numbers": true,
      "require_special_chars": true,
      "max_age_days": 90
    },
    "session_management": {
      "token_type": "JWT",
      "expiration_time": "1h",
      "refresh_token_expiration": "7d",
      "secure_cookie": true,
      "same_site": "strict"
    }
  },
  "data_protection": {
    "sensitive_data": [
      "password",
      "credit_card",
      "personal_info",
      "api_keys"
    ],
    "encryption": {
      "algorithm": "AES-256-GCM",
      "key_rotation": "3months",
      "salt_rounds": 12
    }
  },
  "api_security": {
    "rate_limiting": {
      "max_requests": 100,
      "time_window": "1m",
      "strategy": "sliding-window"
    },
    "headers": {
      "required": [
        "Content-Security-Policy",
        "X-Content-Type-Options",
        "X-Frame-Options",
        "X-XSS-Protection"
      ]
    }
  },
  "code_security": {
    "dependencies": {
      "auto_update": true,
      "vulnerability_scan": "daily",
      "blocked_licenses": [
        "GPL",
        "LGPL"
      ]
    },
    "static_analysis": {
      "enabled": true,
      "tools": [
        "ESLint Security Plugin",
        "SonarQube",
        "OWASP Dependency Check"
      ]
    }
  }
} 
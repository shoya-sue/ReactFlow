{
  "editor": {
    "cursor": {
      "auto_format": true,
      "auto_save": true,
      "format_on_save": true,
      "show_line_numbers": true,
      "word_wrap": "on"
    }
  },
  "extensions": {
    "required": [
      "ESLint",
      "Prettier",
      "GitLens",
      "Error Lens",
      "Import Cost"
    ],
    "recommended": [
      "React Developer Tools",
      "TypeScript Hero",
      "Code Spell Checker"
    ]
  },
  "debugging": {
    "browser": "Chrome",
    "react_devtools": true,
    "console_clear": false,
    "preserve_log": true
  },
  "testing": {
    "framework": "Jest",
    "coverage_threshold": 80,
    "watch_mode": true
  }
} 
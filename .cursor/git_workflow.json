{
  "branch_naming": {
    "patterns": {
      "feature": "feature/*",
      "bugfix": "fix/*",
      "hotfix": "hotfix/*",
      "release": "release/*"
    },
    "conventions": {
      "use_kebab_case": true,
      "include_ticket_number": true,
      "max_length": 50
    }
  },
  "commit_messages": {
    "types": {
      "feat": "新機能追加",
      "fix": "バグ修正",
      "docs": "ドキュメント更新",
      "style": "コードスタイル修正",
      "refactor": "リファクタリング",
      "test": "テスト関連",
      "chore": "ビルド・補助ツール更新"
    },
    "format": {
      "header": "<type>(<scope>): <subject>",
      "body": "詳細な変更内容",
      "footer": "BREAKING CHANGE/Issue参照"
    },
    "rules": {
      "subject_max_length": 50,
      "body_max_length": 72,
      "use_imperative_mood": true
    }
  },
  "pull_requests": {
    "template": {
      "sections": [
        "変更概要",
        "変更理由",
        "変更内容",
        "テスト内容",
        "影響範囲",
        "チェックリスト"
      ]
    },
    "review_rules": {
      "required_reviewers": 2,
      "wait_time": "24h",
      "auto_merge": false
    }
  },
  "protection_rules": {
    "main": {
      "require_reviews": true,
      "require_status_checks": true,
      "restrict_pushes": true,
      "enforce_admins": true
    },
    "develop": {
      "require_reviews": true,
      "require_status_checks": true,
      "restrict_pushes": false,
      "enforce_admins": false
    }
  }
} 
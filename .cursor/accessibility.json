{
  "aria_rules": {
    "required_attributes": [
      "aria-label",
      "aria-describedby",
      "aria-hidden",
      "role"
    ],
    "interactive_elements": {
      "button": "role='button' が必要",
      "link": "href 属性が必要",
      "input": "適切な label が必要"
    }
  },
  "color_contrast": {
    "minimum_ratio": "4.5:1",
    "recommended_ratio": "7:1",
    "large_text_ratio": "3:1"
  },
  "keyboard_navigation": {
    "focus_visible": true,
    "tab_order": "論理的な順序を保つ",
    "skip_links": "メインコンテンツへのスキップリンクを提供"
  },
  "semantic_html": {
    "preferred_elements": {
      "header": "ページヘッダー",
      "nav": "ナビゲーション",
      "main": "メインコンテンツ",
      "footer": "ページフッター",
      "article": "独立したコンテンツ",
      "section": "関連するコンテンツのグループ"
    }
  },
  "media": {
    "images": {
      "alt_text": "必須",
      "decorative_images": "alt=''を使用"
    },
    "video": {
      "captions": "必須",
      "transcripts": "推奨"
    }
  }
} 